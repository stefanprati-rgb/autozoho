            "encerrado": {
                "css": "menuitem",
                "xpath": "//menuitem[contains(text(),'Encerrado')]"
            }
        }
    },
    "filtros": {
        "dropdown_todos": {
            "css": "button:contains('Todos')",
            "xpath": "//button[contains(text(),'Todos')]"
        },
        "filtro_departamento": {
            "css": "button:contains('Filtrar')",
            "xpath": "//button[contains(text(),'Filtrar')]"
        },
        "limpar": {
            "css": "button:contains('Limpar')",
            "xpath": "//button[contains(text(),'Limpar')]"
        }
    },
    "chat_header": {
        "titulo_contato": {
            "css": "heading",
            "xpath": "//heading"
        },
        "atribuido_para": {
            "css": "button:contains('Caroline')",
            "xpath": "//button[contains(text(),'Caroline')]"
        }
    },
    "chat_status": {
        "mensagem_encerrado": {
            "xpath": "//text()[contains(.,'Chat foi encerrado')]"
        },
        "data_encerramento": {
            "xpath": "//text()[contains(.,'/')][contains(.,'2025')]"
        }
    },
    "chat_mensagens": {
        "mensagem_cliente": {
            "css": "button",
            "xpath": "//button[contains(text(),'Olá')]"
        },
        "historico": {
            "xpath": "//button"
        }
    },
    "acoes_disponiveis": {
        "enviar_comprovante": {
            "xpath": "//text()[contains(.,'Enviar comprovante')]"
        },
        "negociar_prazo": {
            "xpath": "//text()[contains(.,'Negociar prazo')]"
        }
    },
    "chat_footer": {
        "botao_reabrir": {
            "css": "button:contains('Reabrir')",
            "xpath": "//button[contains(text(),'Reabrir')]",
            "descricao": "Botão principal para reabrir conversa encerrada"
        }
    },
    "painel_info": {
        "contato_info": {
            "heading": {
                "css": "heading:contains('Contato Informações')",
                "xpath": "//heading[contains(text(),'Contato Informações')]"
            },
            "email": {
                "xpath": "//text()[contains(.,'@')]"
            },
            "proprietario": {
                "xpath": "//text()[contains(.,'Adriano') or contains(.,'Caroline')]"
            },
            "celular": {
                "xpath": "//text()[contains(.,'+55') or contains(.,'-')]"
            }
        }
    },
    "notas": {
